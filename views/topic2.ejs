                  <a class="dropdown-item" href="/topic2/?sort=newest">Newest</a>
                  <a class="dropdown-item" href="/topic2/?sort=oldest">Oldest</a>
                  <a class="dropdown-item" href="/topic2/?sort=mostlikes">Most Likes</a>
                  <a class="dropdown-item" href="/topic2/?sort=fewestlikes">Fewest Likes</a>
                </div>
              </div>
            </div>
            <!-- Actual comments  -->
            <% var likeSet = new Set();
            if (!likedComments || likedComments.length == 0) {
              //do nothing
            } else {
              for (var i = 0; i < likedComments.length; i++) {
                likeSet.add(likedComments[i].comment_id);
              }
            }
            %>
            <div class="row d-flex justify-content-center">
              <div class="col-md-12 col-lg-10 col-xl-8">
                <% for (var i = 0; i < comments.length; i++) { %>
                <div class="card" style="margin-bottom: 20px">
                  <div class="card-body">
                    <div>
                      <h6 class="fw-bold text-primary mb-1">
                        <%- comments[i].username %>
                      </h6>
                      <p class="text-muted small mb-0">
                        <%- comments[i].time_posted %>
                      </p>
                    </div>
                    <p class="mt-3 mb-4 pb-2"><%- comments[i].content %></p>

                    <div class="d-flex justify-content-end">
                      <% if (!user) { %>
                      <div class="d-flex">
                        <p><%- comments[i].likes %></p>
                        <img
                          src="../img/fire.png"
                          id="fire"
                          onclick="alert('You need to be logged in to like comments!')"
                        />
                      </div>
                      <% } else if (likeSet.has(comments[i].comment_id)) { %>
                        <!-- The user has liked the comment -->
                      <form method="POST" action="/topic2/likeComment" class="d-flex">
                        <p class="mb-0 likesCount"><%- comments[i].likes %></p>
                        <button
                          type="submit"
                          class="voteButton" />
                          <input
                            type="hidden"
                            name="comment_id"
                            value="<%= comments[i].comment_id %>"
                          />
                          <input
                            type="hidden"
                            name="username"
                            value="<%= user.username %>"
                          />
                          <input type="hidden" name="post_id" value="2" />
                          <img
                            id="fire"
                            src="../img/fire.png"
                            alt="vote"
                            class="fireimg" />
                        </button>
                      </form>
                      <% } else { %>
                        <!-- The user has NOT liked the comment -->
                      <form method="POST" action="/topic2/likeComment" class="d-flex">
                        <p class="mb-0 likesCount"><%- comments[i].likes %></p>
                        <button
                          type="submit"
                          class="voteButton unclicked" />
                          <input
                            type="hidden"
                            name="comment_id"
                            value="<%= comments[i].comment_id %>"
                          />
                          <input
                            type="hidden"
                            name="username"
                            value="<%= user.username %>"
                          />
                          <input type="hidden" name="post_id" value="2" />
                          <img
                            id="fire"
                            src="img/fire.png"
                            alt="vote"
                            class="fireimg inactive" />
                        </button>
                      </form>
                        <% } %>
